files:
  "/etc/php.d/99-custom.ini":
    mode: "000644"
    owner: root
    group: root
    content: |
      upload_max_filesize = 100M
      post_max_size = 100M
      max_file_uploads = 20

container_commands:
  01_create_storage_folder:
    command: "mkdir -p /var/app/storage"
    ignoreErrors: true
  02_chmod_storage:
    command: "chmod -R 775 /var/app/storage"
    ignoreErrors: true
  03_chown_storage:
    command: "chown -R webapp:webapp /var/app/storage"
    ignoreErrors: true
  04_storage_link:
    command: "php artisan storage:link"
    ignoreErrors: true